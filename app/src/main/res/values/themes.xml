    <!--endregion-->

    <!--region edittext styles-->
    <style name="EditTextDefault" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:textSize">@dimen/fontNormal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="boxCornerRadiusTopStart">@dimen/_30sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_30sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_30sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_30sdp</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="hintEnabled">false</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
    </style>


    <!--endregion-->

    <style name="AppBottomSheetDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    </style>

    <style name="AppBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BottomSheetRoundedOverlay</item>
    </style>

    <style name="BottomSheetRoundedOverlay" >
        <item name="cornerSizeTopLeft">@dimen/_10sdp</item>
        <item name="cornerSizeTopRight">@dimen/_10sdp</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>